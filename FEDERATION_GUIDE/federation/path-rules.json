{
  "$schema": "../schemas/path-rules.schema.json",
  "version": "1.0.0",
  "description": "Path translation rules for monorepo to local submodule conversion",
  "rules": {
    "DLKBKD": {
      "monorepo_prefix": "backend/DLKBKD/",
      "local_prefix": "",
      "patterns": [
        {
          "from": "^backend/DLKBKD/(.*)$",
          "to": "$1",
          "description": "Strip monorepo prefix"
        }
      ],
      "external_references": {
        "core/synap5e/": "[EXTERNAL:synap5e] ",
        "frontend/DLKFTD-1/": "[EXTERNAL:DLKFTD-1] ",
        "frontend/DLKFTD-2/": "[EXTERNAL:DLKFTD-2] "
      }
    },
    "synap5e": {
      "monorepo_prefix": "core/synap5e/",
      "local_prefix": "",
      "patterns": [
        {
          "from": "^core/synap5e/(.*)$",
          "to": "$1",
          "description": "Strip monorepo prefix"
        }
      ],
      "external_references": {
        "backend/DLKBKD/": "[EXTERNAL:DLKBKD] ",
        "frontend/DLKFTD-1/": "[EXTERNAL:DLKFTD-1] ",
        "frontend/DLKFTD-2/": "[EXTERNAL:DLKFTD-2] "
      }
    },
    "DLKFTD-1": {
      "monorepo_prefix": "frontend/DLKFTD-1/",
      "local_prefix": "",
      "patterns": [
        {
          "from": "^frontend/DLKFTD-1/(.*)$",
          "to": "$1",
          "description": "Strip monorepo prefix"
        }
      ],
      "external_references": {
        "backend/DLKBKD/": "[EXTERNAL:DLKBKD] ",
        "core/synap5e/": "[EXTERNAL:synap5e] ",
        "frontend/DLKFTD-2/": "[EXTERNAL:DLKFTD-2] "
      }
    },
    "DLKFTD-2": {
      "monorepo_prefix": "frontend/DLKFTD-2/",
      "local_prefix": "",
      "patterns": [
        {
          "from": "^frontend/DLKFTD-2/(.*)$",
          "to": "$1",
          "description": "Strip monorepo prefix"
        }
      ],
      "external_references": {
        "backend/DLKBKD/": "[EXTERNAL:DLKBKD] ",
        "core/synap5e/": "[EXTERNAL:synap5e] ",
        "frontend/DLKFTD-1/": "[EXTERNAL:DLKFTD-1] "
      }
    }
  },
  "cross_repo_format": {
    "file_reference": "[EXTERNAL:{repo}] {path}",
    "api_reference": "[EXTERNAL:{repo}:API] {endpoint}",
    "link_reference": "See {repo} repository for details",
    "examples": [
      {
        "monorepo": "backend/DLKBKD/app/api/v1/auth.py:59",
        "in_synap5e": "[EXTERNAL:DLKBKD] app/api/v1/auth.py:59",
        "in_DLKFTD-1": "[EXTERNAL:DLKBKD] app/api/v1/auth.py:59"
      },
      {
        "monorepo": "core/synap5e/app/presets/deadlinekiller.py",
        "in_DLKBKD": "[EXTERNAL:synap5e] app/presets/deadlinekiller.py"
      }
    ]
  },
  "special_paths": {
    ".claude/context/workflows/": {
      "description": "Workflow documentation - reference by name only",
      "transform": "workflow:{filename}",
      "example": {
        "from": ".claude/context/workflows/user-authentication.md",
        "to": "workflow:user-authentication"
      }
    },
    ".claude/context/KNOWN_GOTCHAS.md": {
      "description": "Gotchas file - extract by ID",
      "transform": "gotcha:{id}",
      "example": {
        "from": ".claude/context/KNOWN_GOTCHAS.md#GOTCHA-AUTH-001",
        "to": "gotcha:AUTH-001"
      }
    }
  }
}
