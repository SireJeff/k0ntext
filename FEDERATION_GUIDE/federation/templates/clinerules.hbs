{{! Cline Rules Template - Compact format for Cline VS Code extension }}
# {{registry.name}} - Cline Rules
# Generated: {{metadata.timestamp}}

[identity]
repo={{registry.submodule}}
name={{registry.name}}
stack={{#each registry.tech_stack}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}
lang={{registry.primary_language}}
port={{submodule.ports.default}}

[architecture]
pattern={{registry.architecture.pattern}}
{{#each registry.architecture.layers}}
layer.{{@index}}={{this}}
{{/each}}

[entry_points]
{{#each registry.key_files.entry_points}}
{{@index}}={{this}}
{{/each}}

[commands]
{{#each registry.commands}}
{{@key}}={{this}}
{{/each}}

[workflows]
{{#each workflows}}
{{name}}={{category}}/{{complexity}}
{{/each}}

[gotchas]
{{#each gotchas}}
{{id}}={{severity}} | {{title}}
{{/each}}

[constraints]
{{#each registry.critical_constraints}}
{{@index}}={{this}}
{{/each}}

[env.required]
{{#each registry.environment.required}}
{{@index}}={{this}}
{{/each}}

[env.optional]
{{#each registry.environment.optional}}
{{@index}}={{this}}
{{/each}}

{{#if active_task}}
[active_task]
id={{active_task.id}}
title={{active_task.title}}
priority={{active_task.priority}}
description={{active_task.description}}
{{#each active_task.constraints}}
constraint.{{@index}}={{this}}
{{/each}}
{{#each active_task.acceptance_criteria}}
criteria.{{@index}}={{this}}
{{/each}}
{{/if}}

[external_repos]
{{#each cross_repos}}
{{name}}={{description}}
{{/each}}

