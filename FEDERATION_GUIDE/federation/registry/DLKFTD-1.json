{
  "$schema": "../../schemas/registry.schema.json",
  "submodule": "DLKFTD-1",
  "name": "Main Website Frontend",
  "description": "Marketing site, user dashboard, payments interface",
  "tech_stack": ["Next.js 15", "React 19", "TypeScript", "Tailwind CSS", "shadcn/ui"],
  "primary_language": "typescript",
  "workflows": {
    "owned": [
      "user-management"
    ],
    "participates_in": [
      "user-authentication",
      "payment-processing",
      "job-processing",
      "configuration"
    ],
    "cross_repo_dependencies": {
      "user-authentication": {
        "repo": "DLKBKD",
        "relationship": "consumer",
        "endpoints_used": [
          "/api/v1/auth/login",
          "/api/v1/auth/register",
          "/api/v1/auth/init",
          "/api/v1/auth/logout"
        ]
      },
      "payment-processing": {
        "repo": "DLKBKD",
        "relationship": "consumer",
        "endpoints_used": [
          "/api/v1/payments/request",
          "/api/v1/payments/verify",
          "/api/v1/tokens/balance"
        ]
      },
      "job-processing": {
        "repo": "DLKBKD",
        "relationship": "consumer",
        "endpoints_used": [
          "/api/v1/jobs/submit",
          "/api/v1/jobs/status",
          "/api/v1/jobs/list"
        ]
      }
    }
  },
  "gotchas": {
    "directly_applicable": [
      "FE-001",
      "DEPLOY-003"
    ],
    "awareness_only": [
      "AUTH-001",
      "PAY-001",
      "PAY-002"
    ]
  },
  "key_files": {
    "entry_points": [
      "app/page.tsx",
      "app/layout.tsx"
    ],
    "pages": {
      "marketing": [
        "app/page.tsx",
        "app/pricing/page.tsx",
        "app/features/page.tsx"
      ],
      "auth": [
        "app/(auth)/login/page.tsx",
        "app/(auth)/register/page.tsx",
        "app/(auth)/verify/page.tsx"
      ],
      "dashboard": [
        "app/(dashboard)/dashboard/page.tsx",
        "app/(dashboard)/jobs/page.tsx",
        "app/(dashboard)/payments/page.tsx",
        "app/(dashboard)/settings/page.tsx"
      ]
    },
    "components": [
      "components/auth/*.tsx",
      "components/dashboard/*.tsx",
      "components/ui/*.tsx"
    ],
    "lib": [
      "lib/api/client.ts",
      "lib/hooks/useAuth.tsx",
      "lib/hooks/useSession.ts"
    ],
    "config": [
      "next.config.js",
      "tailwind.config.ts"
    ]
  },
  "architecture": {
    "pattern": "app-router",
    "layers": [
      "app/ - Next.js App Router pages",
      "components/ - React components",
      "lib/ - Utilities, hooks, API clients",
      "public/ - Static assets"
    ],
    "dependencies": {
      "backend": "DLKBKD via REST API",
      "styling": "Tailwind CSS + shadcn/ui"
    }
  },
  "integrations": {
    "external": [],
    "internal": [
      {
        "name": "DLKBKD",
        "file": "lib/api/client.ts",
        "purpose": "Backend API"
      }
    ]
  },
  "commands": {
    "dev": "npm run dev",
    "build": "npm run build",
    "start": "npm start",
    "test": "npm run e2e"
  },
  "environment": {
    "required": [
      "NEXT_PUBLIC_API_URL"
    ],
    "optional": [
      "NEXT_PUBLIC_CHAT_URL",
      "NEXT_PUBLIC_GUEST_MESSAGE_LIMIT",
      "INTERNAL_API_URL",
      "SENTRY_DSN"
    ]
  },
  "critical_constraints": [
    "Uses cookie auth on .deadlinekiller.com domain",
    "RTL layout for Persian - code blocks need dir='ltr'",
    "INTERNAL_API_URL must use Docker service name in containers",
    "NEXT_PUBLIC_ vars are baked into client bundle at build time"
  ]
}
