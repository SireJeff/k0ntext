  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "k0ntext": "./bin/k0ntext.js"
  },
  "type": "module",
  "files": [
    "bin/",
    "dist/",
    "src/",
    "templates/",
    "skills/",
    "docs/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
